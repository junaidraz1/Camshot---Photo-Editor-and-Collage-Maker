<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_7sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="@drawable/bg_less_rounded_dialog_btn"
    android:backgroundTint="@color/newLightBlack"
    android:orientation="horizontal"
    android:padding="@dimen/_6sdp">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_flag"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentStart="true"
            app:riv_corner_radius="@dimen/_7sdp" />

        <TextView
            android:id="@+id/tv_CountryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/rb_selectLanguage"
            android:layout_toEndOf="@+id/iv_flag"
            android:fontFamily="@font/poppins_regular"
            android:textAlignment="viewStart"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

        <RadioButton
            android:id="@+id/rb_selectLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/new_purple"
            android:clickable="false" />

    </RelativeLayout>

</RelativeLayout>