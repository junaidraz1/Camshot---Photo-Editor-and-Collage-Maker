<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:gravity="center"
    android:textDirection="locale"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingStart="@dimen/_5sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingEnd="@dimen/_5sdp"
        android:paddingBottom="@dimen/_15sdp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_back_white" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_toStartOf="@+id/img_save"
            android:layout_toEndOf="@+id/rl_back"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/collage_label"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <RelativeLayout
            android:id="@+id/img_save"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_less_rounded_dialog_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_margin="@dimen/_5sdp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/save_label"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".98">

        <ImageView
            android:id="@+id/img_collage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/filter_names"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp" />

        <RelativeLayout
            android:id="@+id/rl_filteritem"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_below="@+id/filter_names"
            android:layout_marginEnd="@dimen/_3sdp"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/thumbnail_filter"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:scaleType="centerCrop"
                app:riv_corner_radius="@dimen/_7sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thumbnail_filter"
                android:fontFamily="@font/poppins_medium"
                android:layout_centerHorizontal="true"
                android:text="@string/original_lbl"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_10ssp" />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_filterstype"
            android:layout_width="match_parent"
            android:layout_below="@+id/filter_names"
            android:layout_toEndOf="@+id/rl_filteritem"
            android:layout_height="@dimen/_90sdp" />

    </RelativeLayout>

</LinearLayout>